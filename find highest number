class Solution {
  public:
    int findPeakElement(vector<int>& a) {
        int left = 0, right = a.size() - 1;
        
        while(left < right){
            int mid = left + (right - left) / 2;
            
            if(a[mid] < a[mid+1]){
                left = mid + 1;
            }
            
            else{
                right = mid;
            }
        }
        
        return a[left];

    }
};
